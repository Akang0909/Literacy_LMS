@model Literacy_LMS.Models.Book

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">Book Details</h2>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Book ID:</strong> @Model.BookID</p>
                <p><strong>Section:</strong> @Model.BookSection</p>
                <p><strong>Subject:</strong> @Model.Subject</p>
                <p><strong>Textbook:</strong> @Model.Textbook</p>
                <p><strong>Volume:</strong> @Model.Volume</p>
            </div>
            <div class="col-md-6">
                <p><strong>Copyright Year:</strong> @Model.CopyrightYear</p>
                <p><strong>Availability:</strong> @Model.NumberOfCopies</p>
                <p><strong>Author:</strong> @Model.Author</p>
                <p><strong>ISBN:</strong> @Model.ISBN</p>
                <p><strong>Book Description:</strong> @Model.BookStatus</p>
            </div>
        </div>

        <div class="mt-4">
            <a href="javascript:history.back()" class="btn btn-primary">
                Back
            </a>
            <a href="@Url.Action("Archive", "Book", new { id = Model.BookID })" class="btn btn-secondary">
                📂 Archive
            </a>

        </div>
    </div>
</div>
