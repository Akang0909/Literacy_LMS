@model Literacy_LMS.Models.Book

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">Book Details</h2>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Book ID:</strong> @Model.BookID</p>
                <p><strong>Section:</strong> @Model.BookSection</p>
                <p><strong>Subject:</strong> @Model.Subject</p>
                <p><strong>Textbook:</strong> @Model.Textbook</p>
                <p><strong>Volume:</strong> @Model.Volume</p>
            </div>
            <div class="col-md-6">
                <p><strong>Copyright Year:</strong> @Model.CopyrightYear</p>
                <p><strong>Availability:</strong> @Model.NumberOfCopies</p>
                <p><strong>Author:</strong> @Model.Author</p>
                <p><strong>ISBN:</strong> @Model.ISBN</p>
                <p><strong>Book Description:</strong> @Model.BookStatus</p>
            </div>
        </div>

        <div class="mt-4">
            <a href="javascript:history.back()" class="btn btn-primary">
                Back
            </a>
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#archiveModal">
                📂 Archive
            </button>
        </div>
    </div>
</div>

<!-- Archive Confirmation Modal -->
<div class="modal fade" id="archiveModal" tabindex="-1" aria-labelledby="archiveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="archiveModalLabel">Confirm Archive</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to archive this book?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="@Url.Action("Archive", "Book", new { id = Model.BookID })" class="btn btn-danger">Yes, Archive</a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap 5 JS (if not already included) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
