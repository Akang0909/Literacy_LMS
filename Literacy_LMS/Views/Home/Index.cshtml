@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="display-3 fw-bold text-primary">
                Welcome to Your <span class="text-info">Literacy</span> Library System
            </h1>

            <p class="lead text-muted">Manage books, track transactions, and streamline your library process efficiently.</p>

            <a href="/Books/Index" class="btn btn-primary btn-lg mt-3">Browse Books</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">📚 Manage Books</h5>
                    <p class="card-text text-muted">Add, edit, and delete books from your library with ease.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">🔍 Track Borrowers</h5>
                    <p class="card-text text-muted">Monitor borrowed books, due dates, and overdue fines.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">👥 Manage Users</h5>
                    <p class="card-text text-muted">Control access for admins, librarians, and staff members.</p>
                </div>
            </div>
        </div>
    </div>
</div>
