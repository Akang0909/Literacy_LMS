@{
    ViewData["Title"] = "StudentDashboard";
}

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    html, body {
        margin: 0;
        padding: 0;
    }

    .dashboard-container {
        display: flex;
        height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* Button to open/close sidebar */
    .openbtn {
        font-size: 20px;
        cursor: pointer;
        background-color: #343A40;
        color: white;
        padding: 10px 15px;
        border: none;
        width: 100%;
        text-align: right;
        display: flex;
        justify-content: end;
    }

    /* Sidebar Styles */
    .sidebar {
        height: 97vh;
        width: 250px;
        background-color: #343a40;
        padding-top: 20px;
        transition: 0.5s;
        overflow-y: auto;
        white-space: nowrap;
        box-sizing: border-box;
        margin: 0;
    }

        .sidebar a {
            padding: 10px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.5s;
        }

            .sidebar a:hover {
                background-color: #007bff;
            }

        /* Collapsed state for sidebar */
        .sidebar.collapsed {
            width: 60px;
        }

            .sidebar.collapsed a {
                justify-content: center;
                padding: 10px 0;
            }

                .sidebar.collapsed a span {
                    display: none;
                }

    /* Content area styles */
    .content {
        flex-grow: 1;
        padding: 20px;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

        /* Adjust content margin when sidebar is collapsed */
        .content.expanded {
            margin-left: 60px;
        }
</style>

<!-- Dashboard -->
<div class="dashboard-container">
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <!-- Button to toggle sidebar visibility -->
        <button id="menu-toggle" class="openbtn">
            <i class="fa fa-bars"></i>
        </button>

        <a href="@Url.Action("Dashboard", "Students")"><i class="fa fa-home"></i> <span>Home</span></a>
        <a href="#"><i class="fa fa-envelope"></i> <span>Messages</span></a>
        <a href="@Url.Action("Books", "Students")"><i class="fa fa-book"></i> <span>All Books</span></a>
        <a href="@Url.Action("Previous", "Students")"><i class="fa fa-book"></i> <span>Previously Borrowed Books</span></a>
        <a href="@Url.Action("Currently", "Students")"><i class="fa fa-book"></i> <span>Currently Borrowed Books</span></a>

    </div>

    <!-- Main Content -->
    <div id="content" class="content d-flex justify-content-center mt-5 mb-5">
        <div class="card p-4 shadow-lg rounded" style="width: 400px;">
            <div class="card-body text-center">
                <h4 class="card-title">Student</h4>
                <p class="card-text">
                    <strong>Email:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                </p>

                <p class="card-text">
                    <strong>Student ID:</strong> @ViewBag.StudentIDNumber
                </p>

                <p class="card-text">
                    <strong>Phone Number:</strong> @ViewBag.PhoneNumber
                </p>

                <div class="btn-group w-100 mt-3 gap-2">
                    <!-- Buttons can be added here -->
                </div>
            </div>
        </div>
    </div>





</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Toggle sidebar (collapsed or expanded)
            $('#menu-toggle').click(function () {
                $('#sidebar').toggleClass('collapsed');
                $('#content').toggleClass('expanded');
            });
        });
    </script>
}
