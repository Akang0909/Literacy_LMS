@{
    ViewData["Title"] = "Messages";
}

<h2 class="text-center">Student Messages</h2>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Sender</th>
            <th>Subject</th>
            <th>Received Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.Sender</td>
                <td>@message.Subject</td>
                <td>@message.ReceivedDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a href="@Url.Action("ViewMessage", "Messages", new { id = message.MessageID })" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
